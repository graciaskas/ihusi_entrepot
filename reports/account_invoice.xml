<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_with_payments" name="report_sale" inherit_id="account.report_invoice_document">
        <xpath expr="//th[@name='th_description']" position="after">
            <th name="th_nombre_jours" class="text-right"><span>Qt√©(Jours)</span></th>
        </xpath>

        <xpath expr="//tbody//tr//td[@name='account_invoice_line_name']" position="after">
             <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                <span class="text-nowrap" t-field="line.nombre_jours"/>
            </td>
        </xpath>

    </template>

</odoo>
